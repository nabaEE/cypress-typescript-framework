pipeline {
  agent {
    docker {
      image 'cypress/included:14.4.1'
      args '-u root' // Run as root to avoid permission issues
    }
  }

  tools {
    nodejs 'Node 18' // This should be set up in Global Tool Configuration
  }

  stages {
    stage('Checkout Code') {
      steps {
        git 'https://github.com/nabaEE/cypress-typescript-framework.git'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm ci'
      }
    }

    stage('Run Cypress Tests') {
      steps {
        sh 'npx cypress run'
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: '**/cypress/screenshots/**/*', allowEmptyArchive: true
    }
  }
}
