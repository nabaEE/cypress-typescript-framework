pipeline {
  agent any

  tools {
    nodejs 'Node 18' // Ensure this matches the label in Global Tool Config
  }

  environment {
    HOME = "${env.WORKSPACE}"
  }

  stages {
    stage('Clone GitHub repo') {
      steps {
        // Clone your actual GitHub project
        git url: 'https://github.com/your-username/your-cypress-repo.git', branch: 'main'
      }
    }

    stage('Run Cypress tests') {
      steps {
        script {
          docker.image('cypress/included:14.4.1').inside('-u root') {
            sh 'npm ci'             // install packages
            sh 'npx cypress run'    // run Cypress tests
          }
        }
      }
    }
  }
}
