pipeline {
  agent any

  tools {
    nodejs 'Node 18' // Make sure this label exists in Jenkins tool config
  }

  environment {
    HOME = "${env.WORKSPACE}"
  }

  stages {
    stage('Clone GitHub repo') {
      steps {
        git url: 'https://github.com/your-username/your-cypress-repo.git', 
            branch: 'main',
            credentialsId: 'github-creds' // <--- Add this line
      }
    }

    stage('Run Cypress tests') {
      steps {
        script {
          docker.image('cypress/included:14.4.1').inside('-u root') {
            sh 'npm ci'             // install packages
            sh 'npx cypress run'    // run Cypress tests
          }
        }
      }
    }
  }
}
